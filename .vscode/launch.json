    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Operator Main",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/operator/main.go",
            "args": [
                "--debug",
                "--config",
                "/Users/arbharathan/go/src/github/clickhouse-operator/config/config-dev.yaml"
            ],
            "env": {
                "KUBECONFIG": "/Users/arbharathan/.kube/config"
            }
        },
        {
            "name": "Python Debugger: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ]
}